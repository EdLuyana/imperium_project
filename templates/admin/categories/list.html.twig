{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4">Liste des catégories</h2>
        <a href="{{ path('admin_create_category') }}" class="btn btn-success mb-3">Créer une catégorie</a>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.title }}</td>
                    <td>
                        <a href="{{ path('edit_category', { id: category.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <form action="{{ path('admin_delete_category', {id: category.id}) }}" method="post" class="d-inline-block">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucune catégorie trouvée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
